@model LoginAndRegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <
    <script src="https://kit.fontawesome.com/c4ef0dd853.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Less/dist/stylemain.css">
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="btn-container">
                <button class="btn-change" id="sign-in-btn">Sign In</button>
                <button class="btn-change" id="sign-up-btn">Sign Up</button>
            </div>
            <div class="signin-signup">
                <form asp-action="Login" asp-controller="Account" class="sign-in-form" asp-anti-forgery="true">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="text" placeholder="Email" asp-for="loginModel.Email">
                        <span asp-validation-for="loginModel.Email" />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-key"></i>
                        <input type="password" placeholder="Password" asp-for="loginModel.Password">
                        <span asp-validation-fot="loginModel.Password" />
                    </div>
                    <input type="submit" value="Login" class="btn-solid">
                </form>
                <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class="sign-up-form">
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="text" placeholder="Email" asp-for="registerModel.Email">
                    </div>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" placeholder="Name" asp-for="registerModel.Name">
                    </div>
                    <div class="input-field">
                        <i class="fas fa-key"></i>
                        <input type="password" placeholder="Password" asp-for="registerModel.Password">
                    </div>
                    <div class="input-field">
                        <i class="fas fa-key"></i>
                        <input type="password" placeholder="Confirm Password" asp-for="registerModel.ConfirmPassword">
                    </div>
                    <input type="submit" value="Register" class="btn-solid">
                </form>
            </div>
        </div>
    </div>
    <script src="~/js/main.js"></script>
</body>
</html>
