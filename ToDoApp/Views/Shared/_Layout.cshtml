<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/c4ef0dd853.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/Less/dist/style.css">
    <title>@ViewData["Title"] - ToDo</title>
</head>
<body>
    <div class="left-panel">
        <div class="profile">
            <div class="profile-name">@User.Identity.Name</div>
            <a asp-controller="Account" asp-action="Logout" class="fas fa-sign-out-alt">logout</a>
        </div>
        <nav class="menu">
            <ul>
                <li><a href="#" class="fas fa-home">Home</a></li>
                <li><a href="#" class="fas fa-tasks">Tickets</a></li>
                <li><a href="#" class="fas fa-archive">Archive</a></li>
                <li><a href="#" class="fas fa-cog">Settings</a></li>
            </ul>
        </nav>
    </div>
    <div class="content">
        <main role="main">
            @RenderBody()
        </main>
        
    </div>
</body>
</html>





